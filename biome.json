{
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "formatter": {
        "enabled": false,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 80
    },
    "linter": {
        "enabled": false
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingComma": "all",
            "semicolons": "always"
        }
    }
}
